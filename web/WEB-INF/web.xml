<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>/faces/*</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>faces/index.xhtml</welcome-file>
    </welcome-file-list>
    <security-constraint>
        <display-name>admin-zone</display-name>
        <web-resource-collection>
            <web-resource-name>admin-zone</web-resource-name>
            <description>zona usuario administrador</description>
            <url-pattern>/Proyecto_Reciclaje/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>webAdmin</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>user-zone</display-name>
        <web-resource-collection>
            <web-resource-name>user-zone</web-resource-name>
            <description>zona usuario estandar</description>
            <url-pattern>/faces/empresas_reciclaje.xhtml</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>webUser</role-name>
            <role-name>webAdmin</role-name>
        </auth-constraint>
    </security-constraint>
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>proyecto_reciclaje-realm</realm-name>
        <form-login-config>
            <form-login-page>/faces/inicio_sesion.xhtml</form-login-page>
            <form-error-page>/faces/error.xhtml</form-error-page>
        </form-login-config>
    </login-config>
    <security-role>
        <description>Usuarios Administradores</description>
        <role-name>webAdmin</role-name>
    </security-role>
    <security-role>
        <description>Usuarios Estandar</description>
        <role-name>webUser</role-name>
    </security-role>
</web-app>
